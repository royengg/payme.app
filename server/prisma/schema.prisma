generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model Guild {
  id        String     @id 
  name      String
  webhookUrl String?   
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  users     User[]
  invoices  Invoice[]
  templates Template[]
  clients   Client[]
}

model User {
  id          String     @id 
  email       String?
  paypalEmail String?    
  paypalMeUsername String?  
  currency    String     @default("USD") 
  guildId     String
  guild       Guild      @relation(fields: [guildId], references: [id], onDelete: Cascade)
  invoices    Invoice[]
  templates   Template[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@unique([id, guildId])
  clients     Client[]
}

model Client {
  id        String   @id @default(cuid())
  userId    String   
  guildId   String
  discordId String   
  name      String   
  email     String   
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  guild     Guild    @relation(fields: [guildId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, guildId, discordId]) 
}

model Invoice {
  id              String        @id @default(cuid())
  paypalInvoiceId String?       @unique
  paypalLink      String?
  amount          Decimal       @db.Decimal(10, 2)
  currency        String        @default("USD")
  description     String
  status          InvoiceStatus @default(DRAFT)
  clientDiscordId String        
  clientEmail     String?       
  userId          String
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  guildId         String
  guild           Guild         @relation(fields: [guildId], references: [id], onDelete: Cascade)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  paidAt          DateTime?

  @@index([userId])
  @@index([guildId])
  @@index([status])
}

model Template {
  id          String   @id @default(cuid())
  name        String
  amount      Decimal  @db.Decimal(10, 2)
  currency    String   @default("USD")
  description String
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  guildId     String
  guild       Guild    @relation(fields: [guildId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([name, userId, guildId])
  @@index([userId])
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  CANCELLED
}
